<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title || 'Update Account' %></title>
</head>
<body>
  <h1>Update Account Information</h1>

  <!-- Flash messages -->
  <% if (message && message.length > 0) { %>
    <div class="notice"><%= message %></div>
  <% } %>

  <!-- Account Info Update Form -->
  <form action="/account/update" method="post">
    <label for="account_firstname">First Name</label><br>
    <input
      type="text"
      id="account_firstname"
      name="account_firstname"
      required
      value="<%= typeof account_firstname !== 'undefined' ? account_firstname : accountData.account_firstname %>"
    ><br><br>

    <label for="account_lastname">Last Name</label><br>
    <input
      type="text"
      id="account_lastname"
      name="account_lastname"
      required
      value="<%= typeof account_lastname !== 'undefined' ? account_lastname : accountData.account_lastname %>"
    ><br><br>

    <label for="account_email">Email</label><br>
    <input
      type="email"
      id="account_email"
      name="account_email"
      required
      value="<%= typeof account_email !== 'undefined' ? account_email : accountData.account_email %>"
    ><br><br>

    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
    <button type="submit">Update Info</button>
  </form>

  <hr>


  <h2>Change Password</h2>
  <form action="/account/update-password" method="post">
    <label for="account_password">New Password</label><br>
    <input
      type="password"
      id="account_password"
      name="account_password"
      required
    ><br><br>

    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
    <button type="submit">Update Password</button>
  </form>
</body>
</html>
