<% if (message && message.length > 0) { %>
  <div class="notice"><%= message %></div>
<% } %>

<h1><%= title %></h1>

<!-- Account Update Form -->
<h2>Update Account Information</h2>
<form action="/account/update" method="post">
  <form action="/account/update" method="post">
  <input type="hidden" name="account_id" value="<%= accountData.account_id %>" />
  <input type="text" name="account_firstname" value="<%= typeof account_firstname !== 'undefined' ? account_firstname : accountData.account_firstname %>" />
  <input type="text" name="account_lastname" value="<%= typeof account_lastname !== 'undefined' ? account_lastname : accountData.account_lastname %>" />
  <input type="email" name="account_email" value="<%= typeof account_email !== 'undefined' ? account_email : accountData.account_email %>" />
  <button type="submit">Update Info</button>
</form>

<!-- Password Change Form -->
<h2>Change Password</h2>
<p>Password must be at least 12 characters and include a number, uppercase letter, and special character.</p>
<form action="/account/update-password" method="post">
  <label for="account_password">New Password</label>
  <input
    type="password"
    id="account_password"
    name="account_password"
    required
    pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*]).{12,}$"
    title="At least 12 characters, one number, one uppercase letter, and one special character."
  />

  <input type="hidden" name="account_id" value="<%= accountData.account_id %>" />
  <button type="submit">Change Password</button>
</form>
